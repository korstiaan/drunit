 * This source file is subject to the MIT license that is bundled
 * with this source code in the file LICENSE.
 */
 
define('DRUPAL_ROOT',realpath(__DIR__.'/../vendor/korstiaan/drupal-mirror'));

if (!is_dir(DRUPAL_ROOT)) {
    throw new \RuntimeException('Drupal not found, unable to install');
}

chdir(DRUPAL_ROOT);

require DRUPAL_ROOT.'/includes/install.core.inc';
$db = __DIR__.'/../baseline/drupal2.db';

if (file_exists($db)) {
    unlink($db);
}

$GLOBALS['databases'] = array(
    'default' => array(
        'default' => array(
            'driver'     => 'sqlite',
            'database'     => $db,
        ),
    ),
);

define('MAINTENANCE_MODE', 'install');

$settings = array(
    'interactive'			=> false,
    'database_tables_exist'	=> false,    
    'locales'				=> array(),
    'profiles'				=> array('minimal'),
    'parameters'			=> array (
        'locale'	=> 'nl',
        'profile'   => 'minimal',
    ),
    'forms'                 => array(
        'install_configure_form'    => array(
            'site_name' => 'drunit',
            'site_mail' => 'drunit@example.com',
            'account'  => array(
                'name' => 'drunit',
                'mail' => 'drunit@example.com',
                'pass' => array(
                    'pass1' => 'drunit',
                    'pass2' => 'drunit',
                ),
            ),
            'site_default_country'	=> 'NL',
            'date_default_timezone' => 'Europe/Amsterdam',
            'update_status_module'  => array(),    
            'clean_url'				=> 1,
        ),        
    ),
);

install_drupal($settings);
